.forecasts-container
  .row
    .groups
      - @matches.each do |group, matches|
        .group-panel
          .title="Grupo #{group}"
          .matches
            .content{id: "panel#{group}"}
              .row
                .small-7.columns
                  = render partial: 'match_forecast_disabled', collection: matches,
                    as: :match_forecast
                .small-5.columns
                  - teams = Team.where(group: group)
                  .positions
                    %table{data: {teams: teams.map { |t| t.name.downcase }}}
                      %tr.header
                        %th.team Equipo
                        %th pts
                        %th gf
                        %th gc
                      - teams.each do |team|
                        %tr
                          %td.team= team.name
                          %td.pts
                          %td.gf
                          %td.gc

  = render partial: 'playoffs/playoffs'

:javascript
  forecast()